css




function pickColor() {
  var colors = [
    "blue",
    "black",
    "yellow",
    "hotpink",
    "dodgerblue",
    "forestgreen",
    "maroon",
    "violet",
    "red",
    "grey",
    "crimson",
    "orange"
  ];
  var random_color = colors[Math.floor(Math.random() * colors.length)];
  var x = document.getElementById("pick");
  x.style.backgroundColor = random_color;
}


